<!DOCTYPE html>
<html>
<head>
  <title>Opinion</title>
  <%= stylesheet_link_tag    'opinion/application', media: 'all' %>
  <%= javascript_include_tag 'opinion/application' %>
  <%= javascript_include_tag Opinion.configuration.charts_engine_location, 'chartkick' %>
  <%= csrf_meta_tags %>
</head>
<body>

<% if flash[:alert] %>
  <p id="error"><%= flash[:alert] %></p>
<% end %>
<% if flash[:notice] %>
  <p id="notice"><%= flash[:notice] %></p>
<% end %>

<%= yield %>

</body>
</html>